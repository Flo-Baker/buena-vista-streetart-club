<h1>Available Artists</h1>

{{#each artists}}
  <h2>{{this.artistName}}</h2>
  <br>
  <a href="/artists/details/{{this._id}}">See Shortvita of this Artists</a>
  <br>
  <a href="/artists/details/{{this._id}}/update">Edit Artist</a>
  <br />
  <form action="/artists/details/{{this._id}}/delete" method="POST">
    <button type="submit">Delete</button>
  </form>
  <hr />
{{/each}}

<form action="/artists/create" method="GET">
    <button type="submit">Create a new Artist!</button>
  </form>

<a href="/artists/create">Create a new Artist</a>